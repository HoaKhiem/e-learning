<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Đăng ký tài khoản</title>
    <!-- Font Icon -->
    <link rel="stylesheet" href="fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Bootstrap4 - CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous" />


    <!-- Main css -->
    <link rel="stylesheet" href="css/sign.css">
    <link rel="shortcut icon" type="image/x-icon" href="./img/favicon.ico" />
</head>

<body>

    <div class="main">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Đăng ký tài khoản</h2>
                        <!-- student form -->
                        <form method="POST" action="/studentregister" class="register-form student-regis st show" id="register-form st">
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" name="userName" id="userName" placeholder="Tên đăng nhập (viết liền không dấu)" minlength="6" required/>
                            </div>
                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" name="email" id="email" placeholder="Địa chỉ email" minlength="6" required/>
                            </div>
                            <div class="form-group">
                                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" name="pass" id="pass" placeholder="Mật khẩu" minlength="6" required/>
                            </div>
                            <div class="form-group">
                                <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input type="password" name="password" id="password" placeholder="Nhập lại mật khẩu" minlength="6" required/>
                            </div>
                            <div class="form-group">
                                <input type="checkbox" name="agree-term" id="agree-term" class="agree-term"/>
                                <label for="agree-term" class="label-agree-term"><span><span></span></span>Tôi đồng ý với <a href="#" class="term-service">điều khoản và dịch vụ</a></label>
                                <p class="form-noti">{{name}}</p>
                            </div>
                            <div class="form-group form-button">
                                <button type="submit" class="form-submit dky-btn">Đăng ký</button>
                            </div>
                        </form>

                        <!-- teacher register -->
                        <form action="/register/teacher" method="POST" class="register-form teacher-regis tc hide"
                            id="register-form tc">
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" name="name" id="name" placeholder="Tên đăng nhập (viết liền không dấu)" minlength="6" required/>
                            </div>
                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" name="email" id="email" placeholder="Địa chỉ email" minlength="6" required/>
                            </div>
                            <div class="form-group">
                                <label for="phone"><i class="zmdi zmdi-lock"></i></label>
                                <input type="telephone" name="phone" id="phone" placeholder="Số điện thoại" minlength="9"/ required>
                            </div>
                            <div class="form-group">
                                <label for="exp"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input type="number" name="exp" id="exp" placeholder="Kinh nghiệm dạy học (năm)" required/>
                            </div>
                            {{!-- <div class="form-group">
                                <label for="exp"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input type="text" name="phone" id="exp" placeholder="Số điện thoại" required/>
                            </div> --}}
                            <div class="form-group">
                                <label for="work"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input type="text" name="work" id="work" placeholder="Đơn vị công tác " required/>
                            </div>
                            <div class="form-group">
                                <p class="form-teacher-al">Thông tin của bạn sẽ được ghi lại và xem xét</p>
                            </div>
                            <div class="form-group">
                                <input type="checkbox" name="agree-term" id="agree-term" class="agree-term"/>
                                <label for="agree-term" class="label-agree-term"><span><span></span></span>Tôi đồng ý với <a href="#" class="term-service">điều khoản và dịch vụ</a></label>
                            </div>
                            <div class="form-group form-button">
                                <button type="submit" class="form-submit dky-btn">Đăng ký</button>
                            </div>
                        </form>
                    </div>
                    <div>
                        <div class="role form-title d-flex">
                            <div id="teacher">
                                <button class="btn btn-success teacher">Giáo Viên</button>
                               
                            </div>
                            <div id="student">
                                <button class="btn btn-success student">Học sinh</button>
                            </div>
                        </div>
                        <figure><a href="/"><img src="img/signup-image.jpg" alt="sing up image"></a></figure>
                        <a href="/login" class="signup-image-link">Đã có tài khoản</a>
                    </div>
                </div>
            </div>
        </section>

    </div>


    <!-- JS -->
    <!-- Library -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <!-- Bootstrap 4 - JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
    {{!-- <script src="../../public/js/zzz.js"></script> --}}
    <script>
        const teacher = document.querySelector('.tc');
        const student = document.querySelector('.st');
        const teacher_btn = document.getElementById('teacher');
        const student_btn = document.getElementById('student');
        student_btn.classList.add('actives');
        teacher_btn.addEventListener('click',(e) =>{
            teacher.classList.remove('hide');
            student.classList.add('hide');
            student_btn.classList.remove('actives');
            teacher_btn.classList.add('actives');
        })

        student_btn.addEventListener('click', (e) => {
            student.classList.remove('hide');
            teacher.classList.add('hide');
            teacher_btn.classList.remove('actives');
            student_btn.classList.add('actives');

        })
    </script>
</html>